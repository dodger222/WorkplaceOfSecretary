@model WorkplaceOfSecretary.Models.Group

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfGroup)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfGroup)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specialty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialty.NameOfSpecialty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Students)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Patronymic</th>
                    <th>Avg score</th>
                    <th>Foreigner</th>
                </tr>
                @foreach (var item in Model.Students)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patronymic)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AverageScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Foreigner)
                    </td>
                </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
